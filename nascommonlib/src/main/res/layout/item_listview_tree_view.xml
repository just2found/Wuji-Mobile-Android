<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_trans_to_gray">

    <RelativeLayout
        android:id="@+id/layout_path"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight48"
        android:gravity="center_vertical"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/file_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:button="@drawable/selector_check_box_tree_view"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center" />

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_file_folder" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/file_select"
            android:layout_toEndOf="@+id/file_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/darker"
            android:textSize="@dimen/text_size_mid" />
    </RelativeLayout>

</LinearLayout>