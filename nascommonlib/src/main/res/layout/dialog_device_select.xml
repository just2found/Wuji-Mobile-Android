<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/layout_dialog_margin"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardElevation="@dimen/default_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/download_to"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_max" />

            <View
                android:id="@+id/top_dividing_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_common_weight"
                android:background="@color/line_tree_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/container_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/swipe_refresh_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/line_tree_view"
                            android:dividerHeight="@dimen/line_list_divider_height"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:listSelector="@android:color/transparent"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:visibility="visible" />

                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                    <TextView
                        android:id="@+id/tv_path"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_btn_height"
                        android:background="@color/color_bg_grey50"
                        android:drawableEnd="@drawable/ic_chevron_right_gray_18dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/common_16"
                        android:paddingTop="2dp"
                        android:paddingEnd="@dimen/common_16"
                        android:paddingBottom="2dp"
                        android:visibility="gone"
                        tools:text="我的文件/"
                        tools:visibility="visible" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txt_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_mid"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/bottom_dividing_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_common_weight"
                android:background="@color/line_tree_view" />

            <!--<Button-->
            <!--android:id="@+id/btn_share"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/layout_dialog_bottom_height"-->
            <!--android:background="@drawable/selector_square_right_bottom_radius_white_trans_gray"-->
            <!--android:gravity="center"-->
            <!--android:padding="5dp"-->
            <!--android:text="@string/confirm"-->
            <!--android:textColor="@color/primary"-->
            <!--android:textSize="@dimen/text_size_mid" />-->
            <LinearLayout
                android:id="@+id/layout_middle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_to_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_dialog_bottom_height"
                    android:background="@drawable/bg_ripple_trans_gray"
                    android:drawableEnd="@drawable/selector_check_box_file_list"
                    android:gravity="center"
                    android:paddingStart="@dimen/view_start"
                    android:paddingEnd="@dimen/view_end"
                    android:text="@string/download_to_phone"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_mid"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_common_weight"
                    android:background="@color/line_tree_view" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_dialog_bottom_height"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/selector_square_left_bottom_radius_white_trans_gray"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_mid" />

                <ImageView
                    android:id="@+id/line_btn"
                    android:layout_width="@dimen/line_common_weight"
                    android:layout_height="match_parent"
                    android:background="@color/line_tree_view" />

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.08"
                    android:background="@drawable/selector_square_right_bottom_radius_white_trans_gray"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_mid" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>