<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_square_full_radius_white"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/select_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_check_box_file_list"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="10dp" />

    <TextView
        android:id="@+id/share_user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_user"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/select_user"
        android:ellipsize="end"
        android:paddingBottom="5dp"
        android:textColor="@color/color_black_secondary_text"
        android:textSize="@dimen/text_size_mid" />

    <TextView
        android:id="@+id/share_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/select_user"
        android:ellipsize="end"
        android:paddingTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_mid" />

</RelativeLayout>