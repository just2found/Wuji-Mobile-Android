<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="#88ffffff"
        app:layout_constraintBottom_toTopOf="@+id/vBottomBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="#88ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vBottomBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/common_24"
        android:layout_marginTop="100dip"
        android:layout_marginEnd="@dimen/common_24"
        android:maxLines="1"
        android:paddingStart="10dip"
        android:paddingEnd="10dip"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/please_select_file_type_upload"
        tools:visibility="visible" />

    <View
        android:id="@+id/vMid"
        android:layout_width="1dip"
        android:layout_height="1dip"
        app:layout_constraintBottom_toTopOf="@+id/gridview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <View
        android:id="@+id/vBottomBackground"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/bg_white_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vBottomHeight"
        android:layout_width="0dip"
        android:layout_height="0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gridview" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/common_16"
        android:layout_marginEnd="@dimen/common_16"
        android:layout_marginRight="@dimen/common_16"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingStart="6dp"
        android:paddingTop="@dimen/common_24"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:stretchMode="columnWidth"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_16"
        android:layout_marginBottom="@dimen/common_16"
        android:paddingStart="20dip"
        android:paddingTop="10dip"
        android:paddingEnd="16dip"
        android:paddingBottom="20dip"
        android:src="@drawable/ic_clear_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
