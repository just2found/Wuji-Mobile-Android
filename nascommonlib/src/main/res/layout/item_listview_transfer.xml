<?xml version="1.0" encoding="utf-8"?>
<com.chad.library.adapter.base.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:progress="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@color/color_bg_grey50"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:focusable="false"
            android:gravity="center"
            android:paddingStart="@dimen/common_16"
            android:paddingEnd="@dimen/common_16"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mid" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_power_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_swipeItemType="main">

        <TextView
            android:id="@+id/fileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/darker"
            android:textSize="@dimen/text_size_mid"
            app:layout_constraintEnd_toEndOf="@+id/barrier6"
            app:layout_constraintStart_toEndOf="@+id/fileImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="file name" />

        <TextView
            android:id="@+id/fileSize"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_min"
            app:layout_constraintStart_toStartOf="@+id/fileName"
            app:layout_constraintTop_toBottomOf="@+id/fileName"
            app:layout_constraintWidth_percent="0.4"
            tools:text="file size" />


        <TextView
            android:id="@+id/ratio"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dip"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_min"
            app:layout_constraintStart_toEndOf="@+id/fileSize"
            app:layout_constraintBaseline_toBaselineOf="@+id/fileSize"
            app:layout_constraintEnd_toEndOf="@+id/barrier6"
            tools:text="file ratio\nw23424324324324" />
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ratio,fileSize" />

        <TextView
            android:id="@+id/textView_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_min"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/barrier6"
            app:layout_constraintStart_toStartOf="@+id/fileName"
            app:layout_constraintTop_toBottomOf="@+id/barrier_state"
            tools:text="TextView"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="progress" />

        <net.sdvn.nascommon.widget.CircleStateProgressBar
            android:id="@+id/progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            progress:MaxProgress="100"
            progress:borderWidth="2dp"
            progress:stateShow="true" />

        <ImageView
            android:id="@+id/fileImage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.chad.library.adapter.base.SwipeItemLayout>