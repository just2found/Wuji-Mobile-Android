<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dialog_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/layout_title_height"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_start"
                android:layout_marginTop="@dimen/view_top_middle"
                android:layout_marginEnd="@dimen/view_end"
                android:minHeight="@dimen/layout_content_height"
                android:gravity="center"
                android:padding="@dimen/tv_padding"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_mid"
                android:visibility="gone"
                tools:text="content"
                tools:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_dialog_weight"
            android:layout_below="@+id/layout_content"
            android:layout_marginTop="@dimen/view_top_start"
            android:background="@color/line_dialog" />

        <TextView
            android:id="@+id/positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_line"
            android:background="@drawable/selector_square_bottom_radius_white_trans_gray"
            android:gravity="center"
            android:minHeight="@dimen/common_ItemHeight48"
            android:padding="@dimen/tv_padding"
            android:text="@string/confirm"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_mid"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>