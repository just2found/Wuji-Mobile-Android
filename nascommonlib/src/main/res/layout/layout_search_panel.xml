<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_title_height"
    android:clickable="true"
    android:focusable="true"
    tools:background="@drawable/bg_title_bar_gradient">

    <ImageView
        android:id="@+id/btn_cancel_search"
        android:layout_width="@dimen/common_ItemHeight48"
        android:layout_height="@dimen/common_ItemHeight48"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_ripple_trans_gray"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_cancel"
        android:text="@string/cancel"
        app:tint="@color/title_icon_color"
        app:tintMode="src_in"
        tools:ignore="ButtonOrder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_ItemHeight48"
        android:layout_toStartOf="@+id/btn_cancel_search"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <FrameLayout
            android:id="@+id/container_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_square_full_radius_input_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <net.sdvn.nascommon.widget.ClearEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:drawableEnd="@drawable/icon_cancel"
                android:drawablePadding="5dp"
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:paddingStart="@dimen/common_16"
                android:paddingEnd="32dp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textDirection="anyRtl"
                android:textSize="@dimen/text_size_sm" />

            <TextView
                android:id="@+id/search_edit_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="@dimen/text_size_sm"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/common_16"
                android:paddingEnd="32dp"
                android:text="@string/hint_search"
                android:textColor="@color/title_text_color"
                app:autoSizeMaxTextSize="@dimen/text_size_sm"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_searchbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>


</RelativeLayout>