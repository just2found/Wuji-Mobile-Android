<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dialog_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_top_start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/layout_title_height"
            android:padding="@dimen/tv_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_title"
            android:visibility="gone"
            tools:text="title"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_start"
            android:layout_marginTop="@dimen/view_top_middle"
            android:layout_marginEnd="@dimen/view_end"
            android:gravity="center"
            android:minHeight="@dimen/layout_content_height"
            android:padding="@dimen/tv_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_mid"
            android:visibility="gone"
            tools:text="content"
            tools:visibility="visible" />

        <include
            layout="@layout/include_layout_pos_and_neg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_start" />

    </LinearLayout>
</androidx.cardview.widget.CardView>