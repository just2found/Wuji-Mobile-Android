<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Light.NoTitleBar">-->
    <style name="AppTheme" parent="AppCompatTheme">
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnim</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:scrollbarSize">12dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_horizontal_track</item>
        <item name="android:scrollbarTrackVertical">@null</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>
    <style name="roundedCornerImageStyle_4dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/common_4</item>
    </style>

    <style name="ActivitySlideAnim" parent="@android:style/Animation.Activity">
        <item name="android:taskOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_right_out</item>

        <item name="android:taskToFrontEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/slide_left_in</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_right_out</item>

        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <!-- <item name="android:activityOpenEnterAnimation">@anim/slide_nav_in_from_right</item>
         <item name="android:activityOpenExitAnimation">@anim/slide_nav_out_to_left</item>
         <item name="android:activityCloseEnterAnimation">@anim/slide_nav_out_to_right</item>
         <item name="android:activityCloseExitAnimation">@anim/slide_nav_in_from_left</item>-->
    </style>


    <style name="DialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_margin">16dp</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="DialogThemeWithoutPadding" parent="DialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="AnimAlphaEnterAndExit">
        <item name="android:windowEnterAnimation">@anim/alpha_in_tip</item>
        <item name="android:windowExitAnimation">@anim/alpha_out_tip</item>
    </style>

    <style name="AnimationAlphaEnterAndExit">
        <item name="android:windowEnterAnimation">@anim/alpha_appear</item>
        <item name="android:windowExitAnimation">@anim/alpha_disappear</item>
    </style>


    <style name="popup_window_anim">
        <item name="android:windowEnterAnimation">@anim/alpha_appear</item>
        <item name="android:windowExitAnimation">@anim/alpha_disappear</item>
    </style>

    <style name="Style_btn_base">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/selector_btn_txt</item>
        <item name="android:textSize">@dimen/txt_button</item>
    </style>

    <style name="Style_btn_bg_primary" parent="Style_btn_base">
        <item name="android:background">@drawable/selector_button_bg_primary</item>
    </style>

    <style name="loading_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_square_loading_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textAllCaps">false</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarSize">48dp</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="AppCompatThemeDark" parent="AppCompatTheme">
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnim</item>
        <item name="colorPrimary">@color/bg_title</item>
        <item name="colorPrimaryDark">@color/bg_title</item>
        <item name="colorAccent">@color/accent_dark</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="AppCompatThemePicture" parent="AppCompatTheme">
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnim</item>
        <item name="colorPrimary">@color/bg_picture_viewer</item>
        <item name="colorPrimaryDark">@color/bg_picture_viewer</item>
        <item name="colorAccent">@color/accent_dark</item>
        <!--rtl反转布局配置-->
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>


    <style name="weightPlaceholderView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="checkableImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_ripple_trans_gray</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/selector_check_box</item>
    </style>
</resources>
