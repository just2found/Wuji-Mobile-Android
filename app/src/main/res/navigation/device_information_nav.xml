<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_information_nav"
    app:startDestination="@id/deviceInformationFragment">

    <fragment
        android:id="@+id/deviceInformationFragment"
        android:name="net.linkmate.app.ui.nas.info.DeviceInformationFragment"
        android:label="deviceInformationFragment"
        tools:layout="@layout/fragment_device_information">
        <argument
            android:name="deviceid"
            app:argType="string" />

        <action
            android:id="@+id/action_device_to_hardware"
            app:destination="@id/hardwareInformationFragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out" />
        <action
            android:id="@+id/action_device_to_sys"
            app:destination="@id/systemStateFragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out" />
    </fragment>


    <fragment
        android:id="@+id/hardwareInformationFragment"
        android:name="net.linkmate.app.ui.nas.info.HardwareInformationFragment"
        android:label="deviceInformationFragment"
        tools:layout="@layout/fragment_hardware_information">
        <argument
            android:name="deviceid"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/systemStateFragment"
        android:name="net.linkmate.app.ui.nas.info.SystemStateFragment"
        android:label="deviceInformationFragment"
        tools:layout="@layout/fragment_system_state">
        <argument
            android:name="deviceid"
            app:argType="string" />
    </fragment>
</navigation>