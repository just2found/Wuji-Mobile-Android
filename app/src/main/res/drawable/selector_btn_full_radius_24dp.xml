<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:height="49dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_dark" />
            <corners android:bottomLeftRadius="24dp" android:bottomRightRadius="24dp" android:topLeftRadius="24dp" android:topRightRadius="24dp" />
        </shape>
    </item>
    <item android:height="49dp" android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_dark" />
            <corners android:bottomLeftRadius="24dp" android:bottomRightRadius="24dp" android:topLeftRadius="24dp" android:topRightRadius="24dp" />
        </shape>
    </item>

    <item android:height="49dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <corners android:bottomLeftRadius="24dp" android:bottomRightRadius="24dp" android:topLeftRadius="24dp" android:topRightRadius="24dp" />
        </shape>
    </item>
</selector>