<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnim</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="BottomPopupWindow">
        <item name="android:windowEnterAnimation">@anim/popup_menu_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_exit_to_bottom</item>
    </style>

    <style name="NoStatusBarTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!--解决页面切换黑屏或白屏问题-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/bg_gray</item>
        <!--Appbar背景色-->
        <!--<item name="colorPrimary">@color/transparent</item>-->
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/transparent</item>
        <!--控制各个控件被选中时的颜色-->
        <!--<item name="colorAccent">@color/transparent</item>-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>

        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SplashTheme" parent="NoStatusBarTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
    </style>

    <style name="BlackTheme" parent="NoStatusBarTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
    </style>

    <style name="DialogThemeWithoutPadding" parent="DialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
    </style>
    <!-- 适用于开启滑动返回功能的Activity -->
    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Transparent.full">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 适用于欢迎界面避免第一次进来白屏或黑屏 -->
    <style name="AppTheme.Transparent.full.Splash">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_margin">0dp</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <!--rtl反转布局配置-->
        <item name="android:textDirection">locale</item>
        <item name="android:gravity">start</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
    </style>

    <style name="DialogTheme2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>
    <style name="ProgressDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/popup_menu_enter_from_parent_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_exit_to_parent_bottom</item>
    </style>

    <style name="Style_btn_green" parent="Style_btn_base">
        <item name="android:background">@drawable/selector_btn_green</item>
    </style>

    <style name="Style_btn_orange" parent="Style_btn_base">
        <item name="android:background">@drawable/selector_btn_orange</item>
    </style>

    <style name="Style_btn_bg_primary" parent="Style_btn_base">
