<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <include layout="@layout/include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="5"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
             />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common_16"
            android:paddingTop="@dimen/common_ItemHeight48"
            android:src="@drawable/ic_logo"
            android:scaleType="centerInside"
            android:layout_weight="3"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/about_tv_version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/common_16"
        tools:text="0.0.0.0"
        android:textColor="@color/text_gray" />

    <RelativeLayout
        android:id="@+id/about_rl_update_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/about_tv_check_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_bg_primary"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_marginStart="@dimen/common_10"
            android:layout_marginEnd="@dimen/common_10"
            android:layout_marginTop="@dimen/common_6"
            android:paddingStart="16dp"
            android:paddingTop="@dimen/common_8"
            android:paddingEnd="@dimen/common_16"
            android:paddingBottom="@dimen/common_8"
            android:text="@string/check_for_updates"
            android:textColor="@color/color_white_text" />

        <TextView
            android:id="@+id/about_tv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_orange_bubble"
            android:paddingStart="@dimen/common_4"
            android:paddingEnd="@dimen/common_4"
            android:textColor="@color/text_white"
            android:textSize="@dimen/txt_11"
            android:visibility="gone"
            android:text="New" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/terms_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_2"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_2"
        android:gravity="center"
        android:text="@string/copyright"
        android:textAlignment="center"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_12"
        android:gravity="center"
        android:text="@string/all_rights_reserved"
        android:textAlignment="center"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />

</LinearLayout>