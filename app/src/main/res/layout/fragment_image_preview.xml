<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <org.view.libwidget.recycleview.PreviewRecyclerView
        android:id="@+id/view_page_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_picture_viewer_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_title_height">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/common_icon32"
                android:layout_height="@dimen/common_icon32"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/view_middle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_ripple_trans_gray"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_return" />

            <TextView
                android:id="@+id/txt_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/view_middle"
                android:layout_toEndOf="@+id/btn_back"
                android:text="@string/title_back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_mid"
                android:visibility="gone"
                tools:text="@string/title_back"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/text_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                tools:text="100/999" />

        </RelativeLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>