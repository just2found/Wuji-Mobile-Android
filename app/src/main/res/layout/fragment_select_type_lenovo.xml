<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#454545">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/common_ItemHeight48"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/ivTitleBg"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0" />
            <!--            android:src="@drawable/ic_group_home"-->

            <ImageView
                android:id="@+id/ivTitleTransparentBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/bg_brief_title_transparent"
                app:layout_collapseMode="pin"
                tools:layout_height="72dp" />

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_ItemHeight48"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/ab_iv_left"
                    android:layout_width="@dimen/common_icon48"
                    android:layout_height="@dimen/common_icon48"
                    android:background="@drawable/bg_ripple_trans_gray"
                    android:padding="@dimen/common_12"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_return"
                    app:tintMode="src_in"
                    tools:visibility="visible" />

                <net.linkmate.app.view.MarqueeTextView
                    android:id="@+id/ab_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_12"
                    android:layout_weight="1"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/txt_17"
                    tools:text="titlie" />

                <ImageView
                    android:id="@+id/ab_iv_right2"
                    android:layout_width="@dimen/common_icon48"
                    android:layout_height="@dimen/common_icon48"
                    android:background="@drawable/bg_ripple_trans_gray"
                    android:padding="@dimen/common_12"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_cloud_transfer_24dp"
                    app:tintMode="src_in" />

                <ImageView
                    android:id="@+id/ab_iv_right"
                    android:layout_width="@dimen/common_icon48"
                    android:layout_height="@dimen/common_icon48"
                    android:background="@drawable/bg_ripple_trans_gray"
                    android:padding="@dimen/common_12"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_more_24dp"
                    app:tintMode="src_in" />
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--连接状态-->
            <net.linkmate.app.view.TipsBar
                android:id="@+id/tipsBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:content_text="@string/load_failed"
                app:icon_visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vHeaderHelper"
                app:link_text="@string/back_to_login"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_view_file_type0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <androidx.constraintlayout.widget.Placeholder
                    android:id="@+id/card_view_holder"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.475" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_private"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_view_radius"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_holder"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintStart_toStartOf="@+id/card_view_holder"
                    app:layout_constraintTop_toTopOf="@+id/card_view_holder">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/icon_space_private" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/root_dir_name_private"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_14"
                        android:textStyle="bold" />

                    <include layout="@layout/layout_ripple_match_parent_holder" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_public"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_ripple_trans_gray"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_view_radius"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/card_view_group"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_view_private"
                    app:layout_constraintTop_toTopOf="@+id/card_view_holder">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/icon_space_public" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/root_dir_name_public"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_14"
                        android:textStyle="bold" />

                    <include layout="@layout/layout_ripple_match_parent_holder" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_group"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_ripple_trans_gray"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_view_radius"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_holder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_view_private"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_public">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/icon_space_group" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/group"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_14"
                        android:textStyle="bold" />

                    <include layout="@layout/layout_ripple_match_parent_holder" />

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_12"
                android:layout_marginTop="@dimen/common_20"
                android:layout_marginRight="@dimen/common_12"
                android:minHeight="72dp"
                android:padding="2dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="0dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_page_file_tool"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:overScrollMode="never">

                    <!--                    <androidx.viewpager.widget.PagerTabStrip-->
                    <!--                        android:id="@+id/view_page_tab_strip"-->
                    <!--                        android:layout_width="32dp"-->
                    <!--                        android:layout_height="4dp"-->
                    <!--                        android:layout_gravity="bottom|center_horizontal"-->
                    <!--                        android:layout_marginBottom="@dimen/common_12"-->
                    <!--                        android:background="@color/colorAccent"-->
                    <!--                        android:textColor="#ff0000" />-->
                </androidx.viewpager.widget.ViewPager>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--icon-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeaderPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_end"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|start">

        <View
            android:id="@+id/vHelper"
            android:layout_width="1dip"
            android:layout_height="1dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dip"
            android:ellipsize="end"
            android:shadowColor="@color/text_dark"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="xx圈子" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_8"
            android:layout_marginBottom="@dimen/common_4"
            android:ellipsize="end"
            android:shadowColor="@color/text_dark"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_12"
            app:layout_constraintBottom_toBottomOf="@+id/vHelper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivIcon"
            tools:text="圈子zhangsanasfjsdklfjaslkdfjlsdjflksjdaflksjdlfjsdlfjsldafjlskajdflksadjf;lsafjlksdjfl;sajdflsjdflasjdflj" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/common_icon56"
            android:layout_height="@dimen/common_icon56"
            android:layout_marginStart="@dimen/common_12"
            android:layout_marginBottom="@dimen/common_32"
            android:background="@drawable/bg_circle_breif_icon"
            android:src="@drawable/icon_device_wz"
            app:layout_constraintBottom_toBottomOf="@+id/vHelper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vHelper"
            app:shapeAppearanceOverlay="@style/roundedCornerImageStyle_4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
