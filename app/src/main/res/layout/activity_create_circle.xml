<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">

        <include layout="@layout/include_title_bar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/form_title_text_style"
                    android:text="@string/circle_name" />

                <EditText
                    android:id="@+id/acc_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/common_12"
                    android:layout_marginEnd="@dimen/common_12"
                    android:background="@drawable/bg_square_full_radius_white_6dp"
                    android:gravity="start|center_vertical"
                    android:hint="@string/pls_input_circle_name"
                    android:inputType="text"
                    android:padding="@dimen/common_10"
                    android:maxLength="16"
                    android:textColor="#808080"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="@dimen/txt_12" />


                <TextView
                    style="@style/form_title_text_style"
                    android:text="@string/circle_type" />

                <net.linkmate.app.view.CusTextView
                    android:id="@+id/acc_tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_12"
                    android:layout_marginEnd="@dimen/common_12"
                    android:background="@drawable/bg_square_full_radius_white_6dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/gray_right_arrow"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:padding="@dimen/common_10"
                    android:text="@string/select_circle_type"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/txt_12"
                    app:endDrawableHeight="@dimen/common_icon24"
                    app:endDrawableWidth="@dimen/common_icon24" />

                <include
                    android:id="@+id/iCircleType"
                    layout="@layout/dialog_circle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_6"
                    android:layout_marginEnd="@dimen/common_6"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_white"
            android:elevation="@dimen/common_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acc_tv_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_16"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/total"
                android:textColor="@color/text_dark" />

            <Button
                android:id="@+id/acc_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_button_bg_recharge"
                android:enabled="false"
                android:minWidth="120dp"
                android:onClick="onClick"
                android:text="@string/create"
                android:textColor="@color/text_white" />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/mLoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_trans_black_30"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <net.linkmate.app.view.ProgressView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:dot_color="@color/color_orange"
            app:dot_count="7" />
    </FrameLayout>

</FrameLayout>