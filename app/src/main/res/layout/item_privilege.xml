<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:orientation="vertical">

    <View
        android:id="@+id/ip_view_item_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_4" />

    <RelativeLayout
        android:id="@+id/ip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_8"
        android:layout_marginTop="@dimen/common_4"
        android:layout_marginEnd="@dimen/common_8"
        android:layout_marginBottom="@dimen/common_4"
        android:background="@drawable/bg_item_network"
        android:elevation="@dimen/common_1"
        android:padding="@dimen/common_12">

        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ip_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_6"
                android:layout_weight="8"
                android:singleLine="true"
                android:text="@string/dev_name"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_14"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ip_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/service_expiring"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/txt_14"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_name"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SN"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/txt_13" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ip_tv_sn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="2019年6月6日"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_flow_usable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_sn"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/flow_usable"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/txt_13" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ip_tv_flow_usable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="2019年6月6日"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_flow_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_flow_usable"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/flow_used"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/txt_13" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ip_tv_flow_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="2019年6月6日"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_flow_used"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/valid_until"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/txt_13" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ip_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="2019年6月6日"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_13" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/ip_view_item_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_4" />
</LinearLayout>