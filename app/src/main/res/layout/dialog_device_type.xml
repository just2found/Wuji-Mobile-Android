<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray">
    <!--背景-->
    <CheckBox
        android:id="@+id/cbSelectDevice"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@android:color/white"
        android:button="@null"
        android:drawableEnd="@drawable/selector_check_box_tree_view"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/common_12"
        android:textColor="@color/selector_black_to_gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivDeviceIcon"
        android:layout_width="@dimen/common_icon36"
        android:layout_height="@dimen/common_icon36"
        android:layout_marginStart="@dimen/common_8"
        android:layout_marginTop="@dimen/common_8"
        android:layout_marginBottom="@dimen/common_8"
        android:scaleType="fitXY"
        android:src="@drawable/icon_device_wz"
        app:shapeAppearanceOverlay="@style/roundedCornerImageStyle_6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llDeviceName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_16"
        android:layout_marginEnd="56dip"
        android:orientation="vertical"
        android:paddingTop="@dimen/common_8"
        android:paddingBottom="@dimen/common_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDeviceIcon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="dev"
            android:textColor="@color/selector_black_to_gray"
            android:textSize="@dimen/txt_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="user xxxx"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/txt_10"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:id="@+id/viewItemFoot"
        style="@style/common_line_style"
        android:layout_width="0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/llDeviceName" />

</androidx.constraintlayout.widget.ConstraintLayout>