<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/common_6">

            <ScrollView
                android:id="@+id/nmg_des_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_bg_grey250"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/nmg_des_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_16"
                        android:layout_marginBottom="@dimen/common_16"
                        android:background="@color/color_bg_grey50"
                        android:orientation="vertical">

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/nmg_des_dil_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tv_text="@string/account"
                            tools:tv_data_text="18676697923" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/nmg_des_dil_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:iv_src="@drawable/icon_edit"
                            app:tv_text="@string/mark_name"
                            tools:tv_data_text="圈子AAA" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/nmg_des_dil_space"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:iv_src="@drawable/icon_edit"
                            app:tv_text="@string/available_space"
                            tools:tv_data_text="圈子AAA" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/nmg_des_btn_transfer_owner"
                        style="@style/StyleDialogDesTvBtn"
                        android:text="@string/transfer_ownership_of_this_device"
                        android:textColor="@color/text_blue"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/nmg_des_btn_up"
                        style="@style/StyleDialogDesTvBtn"
                        android:text="@string/upgrade_to_administrator"
                        android:textColor="@color/text_blue"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/nmg_des_btn_delete"
                        style="@style/StyleDialogDesTvBtn"
                        android:text="@string/delete"
                        android:textColor="@color/text_orange" />

                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/layout_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_trans_black_30"
                android:clickable="true"
                android:visibility="gone">

                <net.linkmate.app.view.ProgressView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    app:dot_color="@color/color_orange"
                    app:dot_count="7" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_icon36"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/common_4"
            android:layout_marginBottom="@dimen/common_4"
            android:scaleType="centerInside"
            android:src="@drawable/icon_cancel" />
    </LinearLayout>
</RelativeLayout>