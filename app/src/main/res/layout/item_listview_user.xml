<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_line"
    android:background="@color/color_bg_grey50"
    app:layout_swipeItemType="main">

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:progressDrawable="@drawable/progress_horizontal_material_light_green_no_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="50" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/common_icon48"
        android:layout_height="@dimen/common_icon48"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/view_start"
        android:scaleType="centerInside"
        android:src="@drawable/icon_defaultuser"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_middle"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:hint="@string/click_to_edit"
        android:singleLine="true"
        android:textSize="@dimen/text_size_sm"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/account"
        android:textColor="@color/darker"
        android:textSize="@dimen/text_size_min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/text_size_min"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_account"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow"
        tools:text="0.0B/0.0B" />

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/view_end"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_subnet_blue_32"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/txt_space"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_admin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/view_middle"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/view_middle"
        android:scaleType="centerInside"
        android:src="@drawable/icon_user_master"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_chevron_right_gray_18dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>