<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="10dip">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/common_6"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/common_6"
        android:background="@drawable/bg_button_theme_primary_radius"
        android:elevation="@dimen/common_4"
        android:foreground="@drawable/bg_ripple_trans_gray"
        android:paddingStart="@dimen/common_12"
        android:paddingTop="@dimen/common_4"
        android:paddingEnd="@dimen/common_12"
        android:paddingBottom="@dimen/common_4"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_11"
        tools:text="TextView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line"
        android:layout_alignParentBottom="true"
        android:background="@color/line_gray" />

</RelativeLayout>