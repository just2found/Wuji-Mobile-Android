<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey50"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/fra_scan_result_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_page_successful" />

    <TextView
        android:id="@+id/fra_scan_result_tv_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/na"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/txt_17"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fra_scan_result_tv_operator_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/na"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/txt_13" />

    <Button
        android:id="@+id/fra_scan_result_btn_operator"
        style="@style/Style_btn_bg_primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight42"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@dimen/common_24"
        android:layout_marginEnd="48dp"
        android:elevation="@dimen/common_10"
        android:text="@string/ok"
        android:textColor="@color/text_white" />

    <Button
        android:id="@+id/fra_scan_result_btn_extra"
        style="@style/Style_btn_bg_disable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight42"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@dimen/common_12"
        android:layout_marginEnd="48dp"
        android:elevation="@dimen/common_10"
        android:visibility="gone"
        tools:text="@string/cancel"
        tools:visibility="visible" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>