<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_a85">

    <LinearLayout
        android:id="@+id/full_load_more_loading_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/loading_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:theme="@style/Theme.AppCompat.Light" />

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="@string/brvah_loading"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/full_load_more_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:layout_marginTop="@dimen/dp_72"
        tools:visibility="visible">


        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/brvah_load_failed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />

    </FrameLayout>

    <View
        android:id="@+id/full_load_more_load_end_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:layout_marginTop="144dp"
        tools:visibility="visible" />

</FrameLayout>