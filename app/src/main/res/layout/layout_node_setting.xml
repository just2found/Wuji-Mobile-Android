<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey250"
    android:minWidth="300dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight48"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/lns_iv_back"
            android:layout_width="@dimen/common_icon42"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ripple_trans_gray"
            android:scaleType="centerInside"
            android:src="@drawable/icon_return_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lns_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_ripple_trans_gray"
            android:gravity="center"
            android:padding="@dimen/common_10"
            android:text="@string/commit"
            android:textColor="@color/selector_txt_blue"
            android:textSize="@dimen/txt_15"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/lns_switch_access_internet"
                style="@style/StyleDialogDesSwitch"
                android:layout_marginTop="@dimen/common_8"
                android:checked="false"
                android:text="@string/access_internet_by_sn"
                android:visibility="visible" />

            <Switch
                android:id="@+id/lns_switch_dns"
                style="@style/StyleDialogDesSwitch"
                android:layout_marginTop="@dimen/common_1"
                android:checked="false"
                android:text="@string/use_dedicated_dns"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/lns_layout_dns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_1"
                android:background="@color/color_bg_grey150"
                android:orientation="vertical"
                android:paddingStart="@dimen/common_8"
                android:paddingEnd="@dimen/common_16"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/dns_1"
                        android:textColor="@color/text_dark"
                        android:autoSizeMaxTextSize="@dimen/txt_13"
                        android:autoSizeMinTextSize="1sp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="1sp"
                        app:autoSizeMaxTextSize="@dimen/txt_13"
                        android:maxLines="2"
                        />

                    <EditText
                        android:id="@+id/lns_edit_dns_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_ItemHeight36"
                        android:digits="0123456789."
                        android:gravity="center"
                        android:textColor="@color/text_dark"
                        android:textColorHint="@color/text_gray"
                        android:textSize="@dimen/txt_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/dns_2"
                        android:textColor="@color/text_dark"
                        android:autoSizeMaxTextSize="@dimen/txt_13"
                        android:autoSizeMinTextSize="1sp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="1sp"
                        app:autoSizeMaxTextSize="@dimen/txt_13"
                        android:maxLines="2"/>

                    <EditText
                        android:id="@+id/lns_edit_dns_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_ItemHeight36"
                        android:digits="0123456789."
                        android:gravity="center"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/txt_13" />
                </LinearLayout>
            </LinearLayout>

            <Switch
                android:id="@+id/lns_switch_subnet"
                style="@style/StyleDialogDesSwitch"
                android:layout_marginTop="@dimen/common_1"
                android:checked="false"
                android:text="@string/access_subnet_by_sn"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lns_layout_subnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/lns_btn_add_subnet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_ItemHeight48"
                    android:layout_marginTop="@dimen/common_1"
                    android:background="@color/color_bg_grey50"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/bg_ripple_trans_gray"
                    android:gravity="center"
                    android:text="@string/add_subnet"
                    android:textColor="@color/selector_txt_blue"
                    android:textSize="@dimen/txt_15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>