<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        app:cardCornerRadius="@dimen/common_6">

        <ScrollView
            android:id="@+id/device_des_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_grey250"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/device_des_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_16"
                    android:orientation="vertical">

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tv_data_text="N/A"
                        app:tv_text="@string/dev_name"
                        tools:iv_src="@drawable/icon_edit" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_mark_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:tv_data_text="N/A"
                        app:tv_text="@string/mark_name"
                        tools:iv_src="@drawable/icon_edit" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_owner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tv_text="@string/owner"
                        tools:tv_data_text="admin(18111111111)" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_unit_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:tv_data_text="@string/fmt_traffic_unit_price"
                        app:tv_text="@string/flow_unit_price"
                        tools:iv_src="@drawable/icon_edit"
                        tools:visibility="visible" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:tv_text="@string/location"
                        tools:tv_data_text="ChangSha" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_vip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tv_text="@string/vip"
                        tools:tv_data_text="198.18.1.100" />

                    <LinearLayout
                        android:id="@+id/des_ll_extrl_dil"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/des_dil_lip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:tv_text="@string/lanIp"
                            tools:tv_data_text="10.23.45.67" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/des_dil_domain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tv_text="@string/domain"
                            tools:tv_data_text="10.23.45.67" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/device_mng_dil_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:tv_data_text="567891234567890"
                            app:tv_text="ID" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/device_mng_dil_sn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:tv_data_text="DCBA6A123456"
                            app:tv_text="SN" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/des_dil_version"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tv_text="@string/version_no"
                            tools:tv_data_text="3.0.1.1888" />

                        <net.linkmate.app.view.DataItemLayout
                            android:id="@+id/device_mng_dil_add_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:tv_data_text="2019-03-14 11:12:13"
                            app:tv_text="@string/bind_time" />

                    </LinearLayout>

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:tv_data_text="N/A"
                        app:tv_text="@string/valid_until" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_total_traffic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:tv_data_text="N/A"
                        app:tv_text="@string/total_traffic" />

                    <net.linkmate.app.view.DataItemLayout
                        android:id="@+id/des_dil_remaining_traffic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:tv_data_text="N/A"
                        app:tv_text="@string/flow_used" />

                    <LinearLayout
                        android:id="@+id/des_ll_expand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_white_radius_bottom"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_4">

                        <TextView
                            android:id="@+id/des_tv_expand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/expand"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="@dimen/txt_12" />

                        <ImageView
                            android:id="@+id/des_iv_expand"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                    </LinearLayout>
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_sn_enable"
                    style="@style/StyleDialogDesSwitch"
                    android:layout_marginBottom="@dimen/common_16"
                    android:checked="false"
                    android:text="@string/enable_node"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_get_score"
                    style="@style/StyleDialogDesTvBtn"
                    android:layout_width="match_parent"
                    android:text="@string/receive_score"
                    android:textColor="@color/text_orange"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_upgrade"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/upgrade_firmware"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_by_browser"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/access_by_browser"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_share"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/share_device"
                    android:visibility="gone"
                    tools:visibility="visible" />
                <TextView
                    android:id="@+id/device_des_btn_torrents"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/fast_transfer"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_mng_des_btn_user_mng"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/members_mng"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_subnet"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/subnet"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_flow"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/dev_flow_details"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_mng"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/dev_mng"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/device_des_btn_networks"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/network_location"
                    android:visibility="gone"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/device_des_btn_vnode"
                    style="@style/StyleDialogDesTvBtn"
                    android:text="@string/view_subnode"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/layout_dev_mng"
            layout="@layout/layout_dev_mng"
            android:visibility="gone" />

        <include
            layout="@layout/layout_upgrade_progress"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_share_code"
            layout="@layout/layout_share_code"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_user_mng"
            layout="@layout/layout_user_mng"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_node_setting"
            layout="@layout/layout_node_setting"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_subnet"
            layout="@layout/layout_subnet"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_vnode"
            layout="@layout/layout_vnode"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_dev_space"
            layout="@layout/layout_dev_space"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_trans_black_30"
            android:clickable="true"
            android:visibility="gone"
            tools:visibility="gone"
            android:focusable="true">

            <net.linkmate.app.view.ProgressView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:dot_color="@color/color_orange"
                app:dot_count="7" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/device_des_iv_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_icon36"
        android:layout_marginTop="@dimen/common_4"
        android:layout_marginBottom="@dimen/common_4"
        android:scaleType="centerInside"
        android:src="@drawable/icon_cancel" />
</LinearLayout>