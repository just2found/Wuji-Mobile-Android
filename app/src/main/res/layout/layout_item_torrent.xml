<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@color/bg_item"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal">

    <net.sdvn.nascommon.widget.CheckableImageButton
        android:id="@+id/rv_list_ibtn_select"
        style="@style/checkableImageButton"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!--<ImageView-->
    <!--android:id="@+id/iv_icon"-->
    <!--android:layout_width="45dp"-->
    <!--android:layout_height="45dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_marginLeft="5dp"-->
    <!--android:background="@android:color/transparent"-->
    <!--android:scaleType="centerInside"-->
    <!--android:src="@drawable/icon_file_default" />-->

    <net.linkmate.app.view.SquareImageView
        android:id="@+id/rv_list_iv_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/common_6"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/icon_bt_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_bt_blue" />

    <net.sdvn.nascommon.widget.NumberProgressBar
        android:id="@+id/rv_list_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_end"
        android:layout_marginStart="4dp"
        android:progressDrawable="@drawable/progress_horizontal_material_blue_no_rect"
        app:layout_constraintEnd_toStartOf="@+id/rv_list_barrier3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rv_list_barrier2"
        app:layout_constraintTop_toBottomOf="@+id/rv_list_txt_name"
        tools:progress="50" />


    <TextView
        android:id="@+id/rv_list_txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="middle"
        android:paddingStart="2dp"
        android:paddingTop="4dp"
        android:paddingEnd="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="@color/darker"
        android:textSize="@dimen/text_size_mid"
        app:layout_constraintStart_toEndOf="@+id/rv_list_barrier2"
        app:layout_constraintEnd_toStartOf="@+id/rv_list_barrier3"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/rv_list_barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_6"
        app:barrierDirection="end"
        app:constraint_referenced_ids="rv_list_iv_icon" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/rv_list_barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_16"
        app:barrierDirection="start"
        app:constraint_referenced_ids="rv_list_ibtn_select,rv_list_cb_select" />

    <RelativeLayout
        android:id="@+id/container_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rv_list_barrier3"
        app:layout_constraintStart_toEndOf="@+id/rv_list_barrier2"
        app:layout_constraintTop_toBottomOf="@+id/rv_list_progressbar">

        <net.linkmate.app.view.SquareImageView
            android:id="@+id/rv_list_img_dl"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_have_downloaded"
            android:visibility="gone"
            tools:visibility="visible" />
        <!--    <TextView-->
        <net.sdvn.nascommon.widget.AutoGoneTextView
            android:id="@+id/rv_list_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/rv_list_img_dl"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_min"
            tools:text="2020-02-21 20:31:00" />

        <!--    <TextView-->
        <net.sdvn.nascommon.widget.AutoGoneTextView
            android:id="@+id/rv_list_txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/view_end"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_min"
            tools:text="8.61MB" />

    </RelativeLayout>

    <net.sdvn.nascommon.widget.CheckableImageButton
        android:id="@+id/rv_list_cb_select"
        style="@style/checkableImageButton"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>