<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_list_trans_to_gray"
        android:gravity="center_vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerInside"
            android:textSize="14dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_mid" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/app_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_mid" />

            <TextView
                android:id="@+id/app_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_min" />

            <TextView
                android:id="@+id/app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/app_stat"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_min" />

            <net.sdvn.nascommon.widget.kyleduo.SwitchButton
                android:id="@+id/btn_state"
                style="@style/SwitchButtonStyle"
                android:layout_width="@dimen/default_switch_button_w"
                android:layout_height="@dimen/default_switch_button_h"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"
                app:kswThumbRangeRatio="1.4"
                app:kswTintColor="#16A560" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/title_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_sm"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/app_uninstall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/uninstall"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mid" />
    </LinearLayout>

</LinearLayout>