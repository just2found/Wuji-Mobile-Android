<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_grey50">

    <ImageView
        android:id="@+id/iv_avatars"
        android:layout_width="@dimen/common_icon56"
        android:layout_height="@dimen/common_icon56"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/container_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tv_time"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/tv_name"
            style="@style/Style_Status_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jokes" />

        <ImageView
            android:id="@+id/iv_user_level"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/view_middle"
            android:layout_marginEnd="@dimen/view_middle"
            android:src="@drawable/icon_user_master"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_is_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_middle"
            android:background="@drawable/bg_stroke_full_radius_disable"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="@string/me"
            android:textSize="@dimen/txt_9"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_avatars"
        app:layout_constraintTop_toBottomOf="@+id/container_user_info"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="TextView" />


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/common_icon32"
        android:layout_height="@dimen/common_icon32"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/view_end"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_chevron_right_gray_24dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/line"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_common_weight"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>