<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_account_tv_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight36"
        android:layout_marginStart="@dimen/common_20"
        android:background="#ffffff"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/common_10"
        android:paddingEnd="@dimen/common_8"
        android:text="account"
        android:textSize="14sp"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/item_account_ib_delete"
        android:layout_width="@dimen/common_icon36"
        android:layout_height="@dimen/common_icon36"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_cancel_grey600_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line"
        android:layout_below="@+id/item_account_tv_id"
        android:layout_marginStart="@dimen/common_20"
        android:background="@color/line_trans" />
</RelativeLayout>