<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/include_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dialog_translucent"
    android:orientation="vertical"
    tools:context="net.linkmate.app.ui.fragment.privacy.PrivacyFragment">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_20"
        android:layout_weight="4"
        android:background="@drawable/bg_square_full_radius_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_20"
        android:paddingTop="@dimen/common_20"
        android:paddingEnd="@dimen/common_20"
        android:paddingBottom="@dimen/common_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_12"
            android:background="@color/transparent"
            android:ellipsize="middle"
            android:gravity="center"
            android:text="@string/agreement_policy"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_16"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/common_4"
                    android:text="@string/agreement_tips_1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_4"
            android:lineSpacingExtra="@dimen/common_4"
            android:text="@string/agreement_tips_2"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/button_pos"
            style="@style/Style_btn_bg_primary"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_16"
            android:text="@string/confirm"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_neg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_4"
            android:background="@color/transparent"
            android:gravity="center"
            android:minWidth="200dp"
            android:minHeight="@dimen/common_ItemHeight36"
            android:text="@string/not_used"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/txt_14"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
