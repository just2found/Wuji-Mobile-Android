<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dynamic_comment_color"
    android:id="@+id/commentPopupRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--辅助控件，显示评论框-->
    <View android:layout_width="0dip"
        android:layout_height="0dip"
        app:layout_constraintTop_toTopOf="@+id/etComment"
        app:layout_constraintEnd_toEndOf="@+id/etComment"
        app:layout_constraintBottom_toBottomOf="@+id/etComment"
        app:layout_constraintStart_toStartOf="@+id/etComment"
        android:layout_marginStart="@dimen/common_16"
        android:layout_marginEnd="@dimen/common_10"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:background="@drawable/bg_edittext_comment_white"
        />


    <EditText
        android:id="@+id/etComment"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSend"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="25dip"
        android:paddingEnd="@dimen/common_12"
        android:paddingTop="16dip"
        android:paddingBottom="16dip"
        android:maxLines="3"
        android:focusable="true"
        android:textSize="@dimen/txt_16"
        android:maxLength="500"
        android:focusableInTouchMode="true"
        />
    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/common_10"
        android:textSize="@dimen/txt_15"
        android:paddingTop="@dimen/common_5"
        android:paddingBottom="@dimen/common_5"
        android:paddingStart="13dip"
        android:paddingEnd="13dip"
        android:enabled="false"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:background="@drawable/selector_bg_send_button"
        android:textColor="@color/selector_send_text_color"
        />
    <View
        style="@style/common_line_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>