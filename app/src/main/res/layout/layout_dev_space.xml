<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_grey50"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight48"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/lds_iv_back"
            android:layout_width="@dimen/common_icon42"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ripple_trans_gray"
            android:scaleType="centerInside"
            android:src="@drawable/icon_return_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lds_iv_hd"
            android:layout_width="@dimen/common_icon42"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ripple_trans_gray"
            android:padding="@dimen/common_6"
            android:scaleType="centerInside"
            android:src="@drawable/icon_hd_format"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/layout_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_introduction"
        android:layout_below="@+id/include_title"
        android:layout_centerHorizontal="true"
        android:background="@color/primary"
        android:gravity="center">

        <net.sdvn.nascommon.widget.AnimCircleProgressBar xmlns:circleProgress="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lds_progressbar"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/common_20"
            circleProgress:bg_color="0x99FFFFFF"
            circleProgress:fill="false"
            circleProgress:max="100"
            circleProgress:paint_color="@color/front_anim_progress_bar"
            circleProgress:paint_weight="13dp" />

        <RelativeLayout
            android:id="@+id/layout_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_progress"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lds_tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:textColor="@color/text_white"
                    android:textSize="40sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/lds_tv_progress"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginStart="5dp"
                    android:text="%"
                    android:layout_marginTop="8dip"
                    android:textColor="@color/text_light_blue"
                    android:textSize="@dimen/txt_14"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_progress_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_progress"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:autoSizeMaxTextSize="@dimen/txt_14"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeTextType="uniform"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="@dimen/txt_14"
                android:maxLines="2"
                android:maxEms="8"
                android:paddingBottom="10dp"
                android:text="@string/used_space_tips"
                android:textColor="@color/text_light_blue"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_20"
        android:paddingEnd="@dimen/common_20">

        <LinearLayout
            android:id="@+id/layout_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/im_total"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/light_gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:maxLines="2"
                android:autoSizeMaxTextSize="@dimen/txt_14"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeTextType="uniform"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="@dimen/txt_14"
                android:text="@string/total_space"
                android:textColor="@color/text_dark"
                 />

            <TextView
                android:id="@+id/lds_tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/querying"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_11" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line"
            android:layout_margin="10dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/layout_aviliable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/im_aviliable"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/primary" />

            <TextView
                android:id="@+id/space2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/free_space"
                android:textColor="@color/text_dark"
                android:autoSizeMaxTextSize="@dimen/txt_14"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeTextType="uniform"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="@dimen/txt_14"
                tools:text="@string/system_space" />

            <TextView
                android:id="@+id/lds_tv_aviliable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/querying"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_11" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line"
            android:layout_margin="10dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/layout_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/im_used"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/color_bg_btn_green" />

            <TextView
                android:id="@+id/space3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:maxLines="2"
                android:autoSizeMaxTextSize="@dimen/txt_14"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeTextType="uniform"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="@dimen/txt_14"
                android:text="@string/used_space"
                android:textColor="@color/text_dark"
                tools:text="@string/user_space" />

            <TextView
                android:id="@+id/lds_tv_used"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/querying"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_11" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line"
            android:layout_margin="10dp"
            android:background="@color/line_gray" />
    </LinearLayout>
</LinearLayout>