<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/dialog_device_layout">
    <!--背景-->
    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/shape_bg_tab_item_enabled"
        app:layout_constraintBottom_toBottomOf="@+id/vHeaderLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <!--头部-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivHeaderImage"
        android:layout_width="38dip"
        android:layout_height="38dip"
        android:layout_marginStart="@dimen/common_16"
        android:scaleType="centerInside"
        android:src="@drawable/icon_device_wz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornerImageStyle_6dp" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_12"
        android:layout_marginTop="@dimen/common_16"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ivHeaderBack"
        app:layout_constraintStart_toEndOf="@+id/ivHeaderImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dev02380238949" />

    <TextView
        android:id="@+id/tvHeaderDescribe"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_2"
        android:layout_marginBottom="@dimen/common_16"
        android:autoSizeMaxTextSize="12sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:textColor="@color/text_dark"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivHeaderBack"
        app:layout_constraintStart_toStartOf="@+id/tvHeaderTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle"
        tools:text="节点配置" />

    <ImageView
        android:id="@+id/ivHeaderClose"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_icon48"
        android:background="@drawable/bg_ripple_trans_gray"
        android:paddingStart="@dimen/common_4"
        android:paddingTop="@dimen/common_16"
        android:paddingEnd="@dimen/common_12"
        android:paddingBottom="@dimen/common_16"
        android:src="@drawable/ic_close_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivHeaderBack"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_icon48"
        android:background="@drawable/bg_ripple_trans_gray"
        android:paddingStart="@dimen/common_10"
        android:paddingTop="@dimen/common_16"
        android:paddingEnd="@dimen/common_6"
        android:paddingBottom="@dimen/common_16"
        android:src="@drawable/ic_arrow_back_grey_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivHeaderClose"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vHeaderLine"
        style="@style/common_line_style"
        android:layout_height="@dimen/common_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
