<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.simplestyle.device.download_offline.DownloadOfflineFindFragment">

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_bar_gradient"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/common_icon48"
            android:layout_height="@dimen/common_icon48"
            android:padding="@dimen/common_12"
            android:background="@drawable/bg_ripple_trans_gray"
            android:src="@drawable/icon_return"
            app:tint="@color/title_icon_color"
            app:tintMode="src_in" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="start|center_vertical"
            android:text="@string/add_seeds_manually"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/txt_19" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/now_path_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_48"
        android:ellipsize="start"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/common_20"
        android:paddingLeft="@dimen/common_20"
        android:singleLine="true"
        android:textColor="@color/txt_item_content"
        android:textSize="@dimen/txt_15"
        android:visibility="gone"
        tools:text="我的空间"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>