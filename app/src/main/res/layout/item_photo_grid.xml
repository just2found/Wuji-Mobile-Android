<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple_trans_gray">


    <View
        android:id="@+id/place_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_bg_grey50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/place_holder"
        app:layout_constraintEnd_toEndOf="@+id/place_holder"
        app:layout_constraintStart_toStartOf="@+id/place_holder"
        app:layout_constraintTop_toTopOf="@+id/place_holder"
        tools:src="@drawable/ic_launcher" />


    <ImageView
        android:id="@+id/foreground_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_foreground_mask"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="@+id/icon"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon" />


    <ImageView
        android:id="@+id/selected_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_ripple_trans_gray"
        android:clickable="false"
        android:elevation="1dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxWidth="32dp"
        android:maxHeight="32dp"
        android:minWidth="12dp"
        android:minHeight="12dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/selector_check_box"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:elevation="1dp"
        android:layout_margin="1dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_favorite_left_top_y"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintWidth_percent="0.25"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="foreground_mask,selected_icon"
        tools:selected="true"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>