<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        app:cardCornerRadius="@dimen/dialog_radius">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:gravity="center">


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_ItemHeight42"
                android:layout_gravity="center"
                android:background="@drawable/bg_ripple_trans_gray"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_title"
                app:layout_constraintEnd_toStartOf="@+id/btn_operate"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/left_btn_operate"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="title" />

            <ImageView
                android:id="@+id/left_btn_operate"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_ItemHeight42"
                android:background="@drawable/bg_ripple_trans_gray"
                android:scaleType="centerInside"
                android:src="@drawable/selector_button_title_back"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/btn_operate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_ItemHeight42"
                android:background="@drawable/bg_ripple_trans_gray"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/select_all"
                tools:visibility="visible" />

            <View
                android:id="@+id/top_dividing_line"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/line_tree_view"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title" />

            <net.sdvn.nascommon.widget.FilePathPanel
                android:id="@+id/layout_path_panel"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_path_height"
                android:layout_marginTop="0.5dp"
                android:background="@color/color_bg_grey50"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_dividing_line" />

            <!--<ImageView-->
            <!--android:id="@+id/mid_dividing_line"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/line_common_weight"-->
            <!--android:layout_below="@+id/layout_path_panel"-->
            <!--android:background="@color/line_tree_view" />-->

            <include
                android:id="@+id/swipe_refresh_layout"
                layout="@layout/include_swipe_refresh_and_rv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/tv_path"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_path_panel" />

            <TextView
                android:id="@+id/tv_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@drawable/selector_bg_white_grey"
                android:drawableEnd="@drawable/ic_chevron_right_gray_18dp"
                android:gravity="center_vertical"
                android:minHeight="@dimen/layout_btn_height"
                android:paddingStart="@dimen/common_16"
                android:paddingTop="1dp"
                android:paddingEnd="@dimen/common_16"
                android:paddingBottom="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/barrier18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="我的文件/"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier13"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                app:barrierDirection="top"
                app:constraint_referenced_ids="btn_cancel,txt_renew" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier18"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                app:barrierDirection="top"
                app:constraint_referenced_ids="layout_status" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_square_left_bottom_radius_white_trans_gray"
                android:gravity="center"
                android:minHeight="@dimen/common_ItemHeight42"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_mid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/line_btn"
                app:layout_constraintHorizontal_bias="0.4995"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/line_btn"
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:background="@color/line_tree_view"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_paste_container"
                app:layout_constraintHorizontal_bias="0.001"
                app:layout_constraintStart_toEndOf="@+id/btn_cancel"
                app:layout_constraintTop_toTopOf="@+id/btn_cancel" />

            <FrameLayout
                android:id="@+id/btn_paste_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4995"
                app:layout_constraintStart_toEndOf="@+id/line_btn">

                <TextView
                    android:id="@+id/btn_paste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_square_right_bottom_radius_white_trans_gray"
                    android:gravity="center"
                    android:minHeight="@dimen/common_ItemHeight42"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_mid"
                    tools:text="@string/download" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/barrier13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <net.sdvn.nascommon.widget.AutoGoneTextView
                    android:id="@+id/txt_status_to_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_bar_total_status"
                    android:layout_marginBottom="0.5dp"
                    android:background="@drawable/selector_bg_white_grey"
                    android:gravity="start"
                    android:paddingStart="@dimen/common_16"
                    android:paddingTop="8dp"
                    android:paddingEnd="@dimen/common_16"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    android:maxLines="2"
                    android:ellipsize="middle"
                    tools:text="jsdfjsldjfl;sdajflsj\n\n\n\n\n\nsdfasdfasdkfjlsafjlsajd"
                    tools:visibility="visible" />

                <net.sdvn.nascommon.widget.NumberProgressBar
                    android:id="@+id/progress_bar_total_status"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_status"
                    android:progressDrawable="@drawable/progress_horizontal_material_blue_no_rect"
                    android:visibility="gone"
                    tools:progress="50"
                    tools:visibility="visible" />

                <net.sdvn.nascommon.widget.AutoGoneTextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:background="@drawable/selector_bg_white_grey"
                    android:gravity="start"
                    android:paddingStart="@dimen/common_16"
                    android:paddingTop="8dp"
                    android:paddingEnd="@dimen/common_16"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    android:maxLines="2"
                    android:ellipsize="middle"
                    tools:text="@string/share_file_receiving_status_progress"
                    tools:visibility="visible" />


            </LinearLayout>


            <TextView
                android:id="@+id/txt_renew"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_ItemHeight42"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/selector_square_bottom_radius_white_trans_gray"
                android:gravity="center"
                android:minHeight="@dimen/common_ItemHeight36"
                android:text="@string/to_re_download"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_mid"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="btn_cancel,btn_paste_container,line_btn"
                tools:visibility="visible" />
            <!--
                    <include
                        android:id="@+id/group_receive_status"
                        layout="@layout/layout_share_v2_receive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <include
                        android:id="@+id/group_send_status"
                        layout="@layout/layout_share_v2_send"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />-->

            <include
                android:id="@+id/include_refresh_view"
                layout="@layout/layout_refresh_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_path_panel"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>