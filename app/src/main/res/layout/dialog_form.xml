<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_white"
        app:cardCornerRadius="@dimen/common_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/df_tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_ItemHeight48"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/common_16"
                android:paddingEnd="@dimen/common_16"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_14"
                android:visibility="gone"
                tools:text="立即登录即可使用此功能"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:id="@+id/iv_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_line"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_ItemHeight48"
                android:gravity="center">

                <TextView
                    android:id="@+id/negative"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_square_left_bottom_radius_white"
                    android:foreground="@drawable/bg_ripple_trans_gray"
                    android:gravity="center"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_mid"
                    tools:text="取消" />

                <View
                    android:layout_width="@dimen/common_line"
                    android:layout_height="fill_parent"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/positive"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_square_right_bottom_radius_white"
                    android:foreground="@drawable/bg_ripple_trans_gray"
                    android:gravity="center"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_mid"
                    tools:text="确认" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>