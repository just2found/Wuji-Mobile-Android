<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0.5dp"
    android:layout_marginBottom="0.5dp"
    android:background="@drawable/selector_bg_white_grey"
    android:gravity="center"
    android:padding="2dp">

    <net.linkmate.app.view.SquareImageView
        android:id="@+id/rv_grid_iv_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        fresco:layout_constraintBottom_toTopOf="@+id/rv_grid_txt_name"
        fresco:layout_constraintDimensionRatio="w,1:1"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_file_pic_default" />

    <ImageView
        android:id="@+id/rv_grid_img_dl"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="bottom"
        android:src="@drawable/icon_have_downloaded"
        android:visibility="gone"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintEnd_toStartOf="@+id/rv_grid_txt_name"
        fresco:layout_constraintStart_toStartOf="@+id/rv_grid_iv_icon"
        fresco:layout_constraintTop_toBottomOf="@+id/rv_grid_iv_icon"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/rv_grid_txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="@color/darker"
        android:textSize="@dimen/text_size_min"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintStart_toEndOf="@+id/rv_grid_img_dl"
        fresco:layout_constraintTop_toBottomOf="@+id/rv_grid_iv_icon" />

    <net.sdvn.nascommon.widget.CheckableImageButton
        android:id="@+id/rv_grid_cb_select"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?android:selectableItemBackground"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/common_4"
        android:scaleType="centerInside"
        android:src="@drawable/selector_check_box"
        android:visibility="visible"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>