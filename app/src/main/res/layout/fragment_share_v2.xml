<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_bar_gradient"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="@dimen/layout_title_height"
            android:layout_height="@dimen/layout_title_height"
            android:background="@drawable/bg_ripple_trans_gray"
            android:padding="@dimen/common_12"
            android:scaleType="centerInside"
            android:src="@drawable/icon_return"
            app:tint="@color/title_icon_color"
            app:tintMode="src_in" />

        <ImageView
            android:id="@+id/view_scan"
            android:layout_width="@dimen/layout_title_height"
            android:layout_height="@dimen/layout_title_height"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_ripple_trans_gray"
            android:padding="@dimen/common_12"
            android:scaleType="centerInside"
            android:src="@drawable/icon_device_more"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/title_icon_color"
            app:tintMode="src_in"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_operator_clean"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_title_height"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@+id/view_scan"
            android:background="@drawable/bg_ripple_trans_gray"
            android:gravity="center_vertical"
            android:padding="@dimen/common_6"
            android:text="@string/clear"
            android:textColor="@color/title_text_color"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_title_height"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_arrow_drop_down_white_24dp"
            android:gravity="center"
            app:tint="@color/title_icon_color"
            app:tintMode="src_in"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_title"
            tools:text="title" />

    </RelativeLayout>

    <net.linkmate.app.view.TipsBar
        android:id="@+id/tipsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:content_text="@string/load_failed"
        app:icon_visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        app:link_text="@string/back_to_login"
        tools:visibility="visible" />

    <include
        layout="@layout/include_swipe_refresh_and_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipsBar" />

</LinearLayout>