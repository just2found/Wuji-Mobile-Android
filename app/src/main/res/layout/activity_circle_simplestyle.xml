<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="?actionBarSize"
            app:collapsedTitleTextAppearance="@style/dynamic_title_style"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <!--
                      app:contentScrim 设置折叠时toolbar的颜色  不能配置有透明度的颜色
                      app:statusBarScrim 设置折叠时状态栏的颜色
                      -->

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rootPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_anchor="@id/appBarLayout"
                app:layout_anchorGravity="bottom|start">

                <!--封面图片-->
                <ImageView
                    android:id="@+id/ivBackgroud"
                    android:layout_width="match_parent"
                    android:layout_height="250dip"
                    android:scaleType="centerCrop"
                    android:src="#454545"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/vBackgroudBottom"
                    android:layout_width="0dip"
                    android:layout_height="16dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivBackgroud" />

                <View
                    android:id="@+id/vTitleBottomHelper"
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTitleHelper"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <!--标题辅助控件 end-->
                <LinearLayout
                    android:id="@+id/llTitle"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_12"
                    android:layout_marginEnd="@dimen/common_12"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBackgroud"
                    app:layout_constraintStart_toEndOf="@+id/ivPortrait"
                    app:layout_constraintTop_toTopOf="@+id/ivPortrait">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:shadowColor="@color/text_dark"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_14"
                        android:textStyle="bold"
                        tools:text="xx圈子" />

                    <TextView
                        android:id="@+id/tvBrief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_3"
                        android:layout_marginBottom="@dimen/common_4"
                        android:ellipsize="end"
                        android:shadowColor="@color/text_dark"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_12"
                        tools:text="zhangsan" />
                </LinearLayout>

                <!--layout_marginTop="@dimen/common_12"  表示底部留12 common_icon48的1/4  -->


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivPortrait"
                    android:layout_width="@dimen/common_icon56"
                    android:layout_height="@dimen/common_icon56"
                    android:layout_marginStart="@dimen/common_12"
                    android:background="@drawable/bg_circle_breif_icon"
                    android:src="@drawable/icon_defualt_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/vBackgroudBottom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shapeAppearanceOverlay="@style/roundedCornerImageStyle_6dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_title_bar_gradient"
                app:contentInsetStartWithNavigation="0dip"
                app:layout_collapseMode="pin"
                app:layout_collapseParallaxMultiplier="0.5"
                app:layout_constraintTop_toBottomOf="@+id/vStatusHelper"
                app:navigationIcon="@drawable/icon_return"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="56dip"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textAppearance="@style/toolbar_title"
                    android:textColor="@color/title_text_color"
                    android:visibility="visible"
                    tools:text="ddd" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:focusableInTouchMode="false"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/llTipsBarPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <net.linkmate.app.view.TipsBar
            android:id="@+id/tipsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:content_text="@string/load_failed"
            app:icon_visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrierHeader"
            app:link_text="@string/back_to_login"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="14dip"
            android:paddingTop="14dip"
            android:paddingEnd="14dip"
            android:paddingBottom="14dip"
            android:textColor="#7E7E7E"
            android:textSize="@dimen/txt_12"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPortrait"
            tools:text="32323" />

        <View
            android:id="@+id/vTitleBottomLine"
            style="@style/common_line_style"
            android:layout_width="match_parent"
            android:background="#E5E5E5" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
