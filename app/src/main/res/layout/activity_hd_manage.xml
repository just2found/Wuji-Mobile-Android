<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hd_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <net.sdvn.nascommon.widget.TitleBackLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_bar_gradient" />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:orientation="vertical">

        <net.linkmate.app.view.TipsBar
            android:id="@+id/tipsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:content_text="@string/load_failed"
            app:icon_visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/title_layout"
            app:link_text="@string/back_to_login"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oneHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="265dp"
            android:layout_height="363dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hd_one" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlt_format"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_hd_manage"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_format"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_ItemHeight48"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp"
            android:background="@drawable/selector_button_bg_primary"
            android:paddingStart="55dp"
            android:paddingTop="10dp"
            android:paddingEnd="55dp"
            android:paddingBottom="10dp"
            android:text="@string/hd_format"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            tools:visibility="visible" />

        <!--        <TextView-->
        <!--            android:id="@+id/text_title_one"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_gravity="center_horizontal"-->
        <!--            android:layout_marginBottom="242dp"-->
        <!--            android:text="@string/hd_one_title"-->
        <!--            android:textColor="@color/bg_title"-->
        <!--            android:textSize="@dimen/text_size_title"-->
        <!--            android:visibility="invisible"-->
        <!--            tools:visibility="gone" />-->
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/moreHD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlt_format"
        android:layout_below="@+id/layout_top"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_title_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/hd_more_title"
                android:textColor="@color/bg_title"
                android:textSize="@dimen/text_size_title" />

            <RelativeLayout
                android:id="@+id/raid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_ripple_trans_gray"
                android:descendantFocusability="blocksDescendants"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/checkbox_raid1"
                    style="@style/checkableImageButton"
                    android:clickable="false"
                    android:focusable="false" />


                <TextView
                    android:id="@+id/text_raid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toEndOf="@+id/checkbox_raid1"
                    android:layout_toRightOf="@+id/checkbox_raid1"
                    android:text="@string/hd_raid1"
                    android:textColor="@color/txt_item_title"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_raid1"
                    android:layout_alignStart="@+id/text_raid1"
                    android:layout_alignLeft="@+id/text_raid1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/hd_raid1_info"
                    android:textColor="@color/darker_gray"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/radi0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_trans_gray"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/text_raid0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toEndOf="@+id/checkbox_raid0"
                    android:layout_toRightOf="@+id/checkbox_raid0"
                    android:text="@string/hd_raid0"
                    android:textColor="@color/txt_item_title"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/checkbox_raid0"
                    style="@style/checkableImageButton"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_raid0"
                    android:layout_alignStart="@+id/text_raid0"
                    android:layout_alignLeft="@+id/text_raid0"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/hd_raid0_info"
                    android:textColor="@color/darker_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_trans_gray"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_lvm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toEndOf="@+id/checkbox_lvm"
                    android:layout_toRightOf="@+id/checkbox_lvm"
                    android:text="@string/hd_lvm"
                    android:textColor="@color/txt_item_title"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/checkbox_lvm"
                    style="@style/checkableImageButton"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_lvm"
                    android:layout_alignStart="@+id/text_lvm"
                    android:layout_alignLeft="@+id/text_lvm"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/hd_lvm_info"
                    android:textColor="@color/darker_gray"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/lvmHD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlt_format"
        android:layout_below="@+id/layout_top"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/hd_more_title"
                android:textColor="@color/bg_title"
                android:textSize="@dimen/text_size_title" />

            <RelativeLayout
                android:id="@+id/lvm_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_ripple_trans_gray"
                android:descendantFocusability="blocksDescendants"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/checkbox_lvm_add"
                    style="@style/checkableImageButton"
                    android:clickable="false"
                    android:focusable="false" />


                <TextView
                    android:id="@+id/text_lvm_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toEndOf="@+id/checkbox_lvm_add"
                    android:layout_toRightOf="@+id/checkbox_lvm_add"
                    android:text="@string/hd_lvm_add"
                    android:textColor="@color/txt_item_title"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_lvm_add"
                    android:layout_alignStart="@+id/text_lvm_add"
                    android:layout_alignLeft="@+id/text_lvm_add"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/hd_lvm_add_info"
                    android:textColor="@color/darker_gray"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_trans_gray"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:padding="6dp">


                <ImageView
                    android:id="@+id/checkbox_lvm2"
                    style="@style/checkableImageButton"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/text_lvm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toEndOf="@+id/checkbox_lvm2"
                    android:layout_toRightOf="@+id/checkbox_lvm2"
                    android:text="@string/hd_lvm"
                    android:textColor="@color/txt_item_title"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_lvm2"
                    android:layout_alignStart="@+id/text_lvm2"
                    android:layout_alignLeft="@+id/text_lvm2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/hd_lvm_info"
                    android:textColor="@color/darker_gray"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tips_lvm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_start"
                android:layout_marginEnd="@dimen/view_end"
                android:text="@string/tips_format_hd"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
