<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_gray"
    android:padding="@dimen/common_8">
    <!--背景-->
    <CheckBox
        android:id="@+id/cbJoinWayCheck"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="false"
        android:button="@null"
        android:background="@drawable/selector_circle_type_bg"
        android:visibility="visible"
        android:focusableInTouchMode="false"
        android:checked="true"
        android:textColor="@color/selector_black_to_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/ivJoinWayCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/join_way_checked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/vJoinWayCheckHalfV"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:layout_marginStart="8dip"
        app:layout_constraintStart_toStartOf="@+id/ivJoinWayCheck"
        app:layout_constraintEnd_toEndOf="@+id/ivJoinWayCheck"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!-- -->
    <TextView
        android:id="@+id/tvJoinWay"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark"
        android:text="免费"
        android:textSize="@dimen/txt_12"
        android:layout_marginTop="@dimen/common_12"
        app:layout_constraintStart_toEndOf="@+id/vJoinWayCheckHalfV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bJoinWayStatus"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bJoinWayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="tvJoinWayStatus"
        />
    <TextView
        android:id="@+id/tvJoinWayStatus"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="@string/enabled"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end|center_vertical"
        android:drawablePadding="@dimen/common_5"
        android:checked="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="@dimen/common_8"
        app:layout_constraintTop_toTopOf="@+id/tvJoinWay"
        android:textSize="@dimen/txt_10"
        android:layout_marginEnd="@dimen/common_18"
        android:textColor="@color/light_green"
        app:layout_constraintWidth_percent="0.4"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bJoinWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvJoinWay,tvJoinWayStatus"
        />

    <LinearLayout
        android:id="@+id/llCircleTypeForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_4"
        android:paddingEnd="@dimen/common_4"
        android:paddingBottom="@dimen/common_8"
        android:layout_marginTop="@dimen/common_4"
        app:layout_constraintTop_toBottomOf="@+id/bJoinWay"
        app:layout_constraintStart_toStartOf="@+id/tvJoinWay">
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@color/text_dark"-->
<!--            />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>