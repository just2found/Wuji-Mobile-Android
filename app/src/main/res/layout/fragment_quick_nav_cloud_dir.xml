<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <net.sdvn.nascommon.widget.FilePathPanel
        android:id="@+id/layout_path_panel"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/bg_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/layout_doc_tab"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg_item_title"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/sort_by"
            android:layout_width="@dimen/common_icon42"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_trans_black"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_button_order" />

        <View
            android:id="@+id/line100"
            android:layout_width="@dimen/common_half"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/sort_by"
            android:background="@color/line_item" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/line100" />
    </RelativeLayout>


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/files_top_barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_half"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="layout_path_panel,layout_doc_tab" />

    <View
        android:id="@+id/top_dividing_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_half"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/files_top_barrier" />

    <include
        layout="@layout/include_swipe_refresh_and_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_dividing_line"
        tools:visibility="visible" />

    <include
        android:id="@+id/include_refresh_view"
        layout="@layout/layout_refresh_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_dividing_line"
        tools:visibility="visible" />

    <include
        android:id="@+id/include_error_view"
        layout="@layout/layout_error_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_dividing_line"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>