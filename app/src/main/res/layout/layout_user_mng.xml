<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_bg_grey250"
    android:minWidth="300dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight48"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/lum_iv_back"
            android:layout_width="@dimen/common_icon42"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ripple_trans_gray"
            android:scaleType="centerInside"
            android:src="@drawable/icon_return_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lum_btn_check_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_ItemHeight48"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_ripple_trans_gray"
            android:gravity="center"
            android:paddingStart="@dimen/common_8"
            android:paddingEnd="@dimen/common_8"
            android:text="@string/check_all"
            android:textColor="@color/selector_txt_blue"
            android:textSize="@dimen/txt_15"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lum_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/common_line"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/lum_btn_cancel_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight48"
        android:background="@drawable/selector_btn_white"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/unshare"
        android:textColor="@color/selector_txt_blue"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="@dimen/txt_15" />
</LinearLayout>