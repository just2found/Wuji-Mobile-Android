<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_16">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="10dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/irr_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_15"
                tools:text="转账给" />

            <TextView
                android:id="@+id/irr_tv_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_13"
                android:layout_marginTop="@dimen/common_2"
                android:layout_marginBottom="@dimen/common_2"
                android:visibility="gone"
                tools:text="18666666666"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/irr_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/txt_13"
                tools:text="02月02日 02:02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/irr_tv_flow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/txt_12"
                android:visibility="gone"
                android:gravity="end"
                tools:text="使用流量：100.00GB"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/irr_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_19"
                tools:text="+100.00" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_half"
        android:background="@color/line_item"/>
</LinearLayout>