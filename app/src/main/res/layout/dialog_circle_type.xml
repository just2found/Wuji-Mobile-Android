<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:clipChildren="true"
    android:orientation="vertical">

    <View
        android:id="@+id/viewItemHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_6"
        android:layout_marginTop="@dimen/common_3"
        android:layout_marginEnd="@dimen/common_6"
        android:layout_marginBottom="@dimen/common_3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--背景-->
            <CheckBox
                android:id="@+id/cbCircleTypeCheck"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:background="@drawable/bg_item_dev"
                android:button="@null"
                tools:checked="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/selector_black_to_gray"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCircleTypeName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20"
                android:layout_marginTop="12dip"
                android:layout_marginEnd="20dip"
                android:paddingEnd="@dimen/common_8"
                android:text="AAA"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/txt_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--最大用户数-->
            <LinearLayout
                android:id="@+id/llCircleTypeForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/common_4"
                android:paddingEnd="@dimen/common_4"
                android:paddingBottom="@dimen/common_8"
                android:layout_marginTop="@dimen/common_4"
                app:layout_constraintStart_toStartOf="@+id/tvCircleTypeName"
                app:layout_constraintTop_toBottomOf="@+id/tvCircleTypeName">
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivTypeChecked"
            android:layout_width="@dimen/common_icon28"
            android:layout_height="@dimen/common_icon28"
            android:src="@drawable/icon_network_checked"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/viewItemFoot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_2" />
</LinearLayout>
