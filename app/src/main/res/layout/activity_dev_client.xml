<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey250"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ItemHeight48"
        android:gravity="center_vertical"
        android:background="@color/color_bg_grey50"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="fdsa"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="发送"
            android:textSize="@dimen/txt_12"
            android:textColor="@color/text_white"
            android:layout_margin="@dimen/common_4"
            android:background="@drawable/selector_button_bg_primary"/>
    </LinearLayout>
</LinearLayout>