<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ihd_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_8"
    android:layout_marginTop="@dimen/common_6"
    android:layout_marginEnd="@dimen/common_8"
    android:layout_marginBottom="@dimen/common_6"
    android:background="@drawable/bg_device_white"
    android:elevation="@dimen/common_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dev_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ihd_img_icon"
                    android:layout_width="@dimen/common_icon42"
                    android:layout_height="@dimen/common_icon42"
                    android:layout_marginStart="@dimen/common_3"
                    android:layout_marginTop="@dimen/common_6"
                    android:layout_marginEnd="@dimen/common_3"
                    android:layout_marginBottom="@dimen/common_6"
                    android:src="@drawable/icon_node"
                    app:shapeAppearanceOverlay="@style/roundedCornerImageStyle_6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ihd_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/txt_13"
                        android:textStyle="bold"
                        tools:text="Device" />

                    <TextView
                        android:id="@+id/ihd_tv_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/txt_11"
                        tools:text="UserName" />

                    <TextView
                        android:id="@+id/ihd_tv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/txt_11"
                        tools:text="198.18.1.100" />

                    <TextView
                        android:id="@+id/ihd_tv_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_6"
                        android:singleLine="true"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/txt_11"
                        tools:text="ChangSha" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/middle_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line"
                android:layout_marginStart="@dimen/common_4"
                android:layout_marginEnd="@dimen/common_4"
                android:layout_marginBottom="@dimen/common_4"
                android:background="@color/line_item" />

            <LinearLayout
                android:id="@+id/ihd_ll_status"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:minHeight="22dp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common_4">

                <ImageView
                    android:id="@+id/ihd_iv_internet"
                    style="@style/style_icon_status"
                    android:src="@drawable/icon_net_selectable"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ihd_iv_subnet"
                    style="@style/style_icon_status"
                    android:src="@drawable/icon_subnet"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ihd_iv_high"
                    style="@style/style_icon_status"
                    android:src="@drawable/icon_net_high"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ihd_iv_dig"
                    style="@style/style_icon_status"
                    android:src="@drawable/icon_dig"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ihd_iv_trans"
                    style="@style/style_icon_status"
                    android:src="@drawable/ic_file_transfer"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ihd_iv_message"
                    style="@style/style_icon_status"
                    android:src="@drawable/icon_message_center"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ihd_iv_upgrade"
                    style="@style/style_icon_status"
                    android:src="@drawable/icon_ota_update"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ihd_tv_is_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/common_6"
            android:paddingStart="@dimen/common_2"
            android:paddingEnd="@dimen/common_2"
            android:text="@string/mine"
            android:textColor="@color/text_white"
            android:textSize="@dimen/txt_10"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/dev_content"
            app:layout_constraintTop_toTopOf="@+id/dev_content"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/ihd_tv_is_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/common_6"
            android:paddingStart="@dimen/common_2"
            android:paddingEnd="@dimen/common_2"
            android:text="@string/_new"
            android:textColor="@color/text_white"
            android:textSize="@dimen/txt_10"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/dev_content"
            app:layout_constraintTop_toTopOf="@+id/dev_content"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ihd_iv_more"
            android:layout_width="@dimen/common_icon42"
            android:layout_height="@dimen/common_icon42"
            android:elevation="@dimen/common_6"
            android:paddingStart="@dimen/common_20"
            android:paddingTop="@dimen/common_20"
            android:paddingEnd="@dimen/common_4"
            android:paddingBottom="@dimen/common_4"
            android:src="@drawable/icon_blue_details"
            app:layout_constraintBottom_toBottomOf="@+id/dev_content"
            app:layout_constraintEnd_toEndOf="@+id/dev_content" />

        <ImageView
            android:id="@+id/iv_icon_status"
            android:layout_width="@dimen/common_icon32"
            android:layout_height="@dimen/common_icon32"
            android:layout_alignParentStart="true"
            android:elevation="@dimen/common_6"
            android:src="@drawable/icon_dev_warn"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/dev_content"
            app:layout_constraintTop_toTopOf="@+id/dev_content"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>

