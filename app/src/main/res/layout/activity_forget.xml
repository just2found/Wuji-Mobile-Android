<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout"
        android:background="@drawable/bg_register"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/forget_pwd_img_back"
            android:layout_width="@dimen/common_icon36"
            android:layout_height="@dimen/common_icon36"
            android:layout_marginStart="@dimen/common_12"
            android:layout_marginTop="@dimen/common_32"
            android:background="@drawable/bg_ripple_trans_gray"
            android:padding="@dimen/common_6"
            android:src="@drawable/icon_return"
            app:tint="@color/title_icon_color"
            app:tintMode="src_in" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forget_pwd_tv_use_email"
            android:layout_marginStart="@dimen/common_32"
            android:layout_marginTop="@dimen/view_top_start"
            android:layout_marginBottom="@dimen/common_20"
            android:text="@string/retrieve_password"
            android:textColor="@color/title_text_color"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_10"
            android:orientation="vertical"
            android:paddingStart="@dimen/common_ItemHeight32"
            android:paddingEnd="@dimen/common_ItemHeight32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_login_type"
                    android:layout_width="@dimen/common_icon20"
                    android:layout_height="@dimen/common_icon20"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/icon_phone"
                    app:tint="@color/title_icon_color"
                    app:tintMode="src_in" />

                <TextView
                    android:id="@+id/tv_ccp"
                    android:layout_width="@dimen/common_ItemHeight42"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ripple_trans_gray"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="+86"
                    android:textColor="@color/theme_body_text"
                    android:textSize="@dimen/txt_14" />

                <EditText
                    android:id="@+id/forget_pwd_et_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/phone"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/theme_body_text"
                    android:textColorHint="@color/theme_body_text_hint"
                    android:textSize="@dimen/txt_14" />

                <View
                    android:layout_width="@dimen/common_line"
                    android:layout_height="match_parent"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/forget_pwd_tv_use_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_theme_primary_radius"
                    android:gravity="center"
                    android:maxWidth="100dip"
                    android:maxLines="3"
                    android:paddingStart="@dimen/common_10"
                    android:paddingTop="4dp"
                    android:paddingEnd="@dimen/common_10"
                    android:paddingBottom="4dp"
                    android:text="@string/use_email"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/txt_11" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line"
                android:layout_marginBottom="@dimen/common_10"
                android:visibility="gone"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/common_icon20"
                    android:layout_height="@dimen/common_icon20"
                    android:src="@drawable/icon_logo_vcode"
                    app:tint="@color/title_icon_color"
                    app:tintMode="src_in" />

                <EditText
                    android:id="@+id/forget_pwd_et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:enabled="true"
                    android:hint="@string/verify_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/theme_body_text"
                    android:textColorHint="@color/theme_body_text_hint"
                    android:textSize="@dimen/txt_14" />

                <View
                    android:layout_width="@dimen/common_line"
                    android:layout_height="match_parent"
                    android:background="@color/line_gray"
                    android:visibility="gone"/>

                <net.linkmate.app.view.CountDownTextView
                    android:id="@+id/forget_pwd_cdtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_theme_primary_radius"
                    android:gravity="center"
                    android:maxWidth="100dip"
                    android:maxLines="3"
                    android:paddingStart="@dimen/common_10"
                    android:paddingTop="4dp"
                    android:paddingEnd="@dimen/common_10"
                    android:paddingBottom="4dp"
                    android:text="@string/get_verify_code"
                    android:textColor="@color/selector_btn_white_text"
                    android:textSize="@dimen/txt_11" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line"
                android:layout_marginBottom="@dimen/common_10"
                android:background="@color/line_gray" />


            <include layout="@layout/layout_password" />

        </LinearLayout>

        <Button
            android:id="@+id/forget_pwd_btn_reset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_ItemHeight42"
            android:layout_marginStart="@dimen/common_ItemHeight42"
            android:layout_marginTop="@dimen/common_12"
            android:layout_marginEnd="@dimen/common_ItemHeight42"
            android:background="@drawable/selector_bg_white_stroke"
            android:text="@string/commit"
            android:textColor="@color/selector_btn_white_text"
            android:textSize="@dimen/txt_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </RelativeLayout>

    </LinearLayout>

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:ccpDialog_backgroundColor="@color/transparent"
        app:ccpDialog_keyboardAutoPopup="false"
        app:ccpDialog_searchEditTextTint="@color/color_white_hint_text"
        app:ccpDialog_showCloseIcon="true"
        app:ccpDialog_showFastScroller="false"
        app:ccpDialog_textColor="@color/black"
        app:ccp_autoDetectCountry="true"
        app:ccp_autoDetectLanguage="true"
        app:ccp_autoFormatNumber="false"
        app:ccp_contentColor="@color/transparent"
        app:ccp_countryPreference="CN,US,HK,TW,DE,FR,JP,KR,TH,ES,IT,GB,VN"
        app:ccp_defaultPhoneCode="86"
        app:ccp_rememberLastSelection="true"
        app:ccp_showFlag="false"
        app:ccp_showNameCode="false"
        app:ccp_textSize="14sp" />
</FrameLayout>