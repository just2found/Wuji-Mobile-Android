<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_title_height"
    android:clickable="true"
    android:focusable="true"
    tools:background="@drawable/bg_title_bar_gradient">

    <TextView
        android:id="@+id/btn_cancel_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_ripple_trans_gray"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:text="@string/cancel"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/txt_button"
        app:tint="@color/title_icon_color"
        app:tintMode="src_in"
        tools:ignore="ButtonOrder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/view_start"
        android:layout_toStartOf="@+id/btn_cancel_search"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <FrameLayout
            android:id="@+id/container_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_stroke_full_radius_gray200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <net.sdvn.nascommon.widget.ClearEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:drawableEnd="@drawable/icon_cancel"
                android:drawablePadding="6dp"
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/theme_body_text"
                android:textDirection="anyRtl"
                android:textSize="@dimen/text_size_sm" />

            <TextView
                android:id="@+id/search_edit_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="@dimen/text_size_sm"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="32dp"
                android:paddingEnd="6dp"
                android:text="@string/hint_search_key"
                android:textColor="@color/text_dark_gray"
                app:autoSizeMaxTextSize="@dimen/text_size_sm"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/common_icon32"
            android:layout_height="@dimen/common_icon32"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/common_4"
            android:scaleType="centerInside"
            android:src="@drawable/icon_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black_a85"
            app:tintMode="src_in" />
    </RelativeLayout>

</RelativeLayout>