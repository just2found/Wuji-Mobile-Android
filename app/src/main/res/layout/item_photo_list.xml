<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_grey50"
    android:descendantFocusability="blocksDescendants"
    android:foreground="@drawable/bg_ripple_trans_gray">


    <androidx.cardview.widget.CardView
        android:id="@+id/rv_list_iv_icon_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/common_6"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/card_iv_radius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <net.linkmate.app.view.SquareImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_file_default"
            tools:src="@color/primary_dark" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_middle"
        android:gravity="center"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/txt_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rv_list_iv_icon_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2020 å¹´" />

    <TextView
        android:id="@+id/tv_content_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/txt_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(365)" />

    <ImageView
        android:id="@+id/foreground_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_foreground_mask"
        app:layout_constraintBottom_toBottomOf="@+id/rv_list_iv_icon_container"
        app:layout_constraintEnd_toEndOf="@+id/rv_list_iv_icon_container"
        app:layout_constraintStart_toStartOf="@+id/rv_list_iv_icon_container"
        app:layout_constraintTop_toTopOf="@+id/rv_list_iv_icon_container" />


    <ImageView
        android:id="@+id/selected_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/selector_check_box"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_end"
        android:src="@drawable/gray_right_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/common_line"
        android:layout_marginStart="@dimen/view_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rv_list_iv_icon_container" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="foreground_mask,selected_icon"
        tools:selected="true" />

</androidx.constraintlayout.widget.ConstraintLayout>