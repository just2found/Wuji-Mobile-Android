<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple_trans_gray"
    android:minHeight="@dimen/common_ItemHeight36"
    android:orientation="vertical"
    android:paddingStart="@dimen/common_6"
    android:paddingEnd="@dimen/common_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_trans_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_10"
        tools:targetApi="m">

        <TextView
            android:id="@+id/iprc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="start"
            android:text="@string/add_new_device"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/txt_13" />

        <ImageView
            android:id="@+id/iprc_iv"
            android:layout_width="@dimen/common_16"
            android:layout_height="@dimen/common_16"
            android:layout_marginStart="@dimen/common_10"
            android:src="@drawable/icon_active" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line"
        android:background="@color/line_gray" />
</LinearLayout>