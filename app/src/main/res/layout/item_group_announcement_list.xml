<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_12"
    android:background="@color/white"
    android:foreground="@drawable/bg_ripple_trans_gray"
    android:gravity="center"
    android:padding="@dimen/common_16"
    app:layout_swipeItemType="main">


    <TextView
        android:id="@+id/group_announcement_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:paddingEnd="@dimen/common_8"
        android:singleLine="true"
        android:textColor="@color/darker"
        android:textSize="@dimen/text_size_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="file group_announcement_content_tv" />


    <TextView
        android:id="@+id/group_announcement_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_4"
        android:layout_marginBottom="@dimen/common_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/text_size_min"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/group_announcement_content_tv"
        app:layout_constraintTop_toBottomOf="@+id/group_announcement_content_tv"
        tools:text="TextView" />

    <TextView
        android:id="@+id/group_announcement_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_8"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/text_size_min"
        app:layout_constraintBaseline_toBaselineOf="@+id/group_announcement_time_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>

