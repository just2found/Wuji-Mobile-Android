<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10"
        android:layout_marginBottom="@dimen/common_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vtt_iv_icon"
            android:layout_width="@dimen/common_12"
            android:layout_height="@dimen/common_12"
            android:layout_marginEnd="4dp"
            android:src="@drawable/bg_check_btn_stroke_full_radius_blue" />

        <TextView
            android:id="@+id/vtt_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/vtt_iv_icon"
            android:text="TextView"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/txt_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvv_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vtt_tv_title"
        android:text="TextView"
        android:background="@drawable/bg_square_full_radius_white_6dp"
        android:padding="@dimen/common_10"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/txt_12" />

</LinearLayout>