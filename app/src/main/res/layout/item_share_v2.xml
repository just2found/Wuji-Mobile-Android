<?xml version="1.0" encoding="utf-8"?>
<com.chad.library.adapter.base.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:minHeight="48dp">

    <TextView
        android:id="@+id/txt_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:focusable="false"
        android:gravity="center"
        android:paddingStart="@dimen/common_16"
        android:paddingEnd="@dimen/common_16"
        android:text="@string/delete"
        android:textColor="@color/color_bg_grey50"
        android:textSize="@dimen/txt_button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_grey50"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        app:layout_swipeItemType="main"
        tools:ignore="SmallSp">


        <FrameLayout
            android:id="@+id/layout_pre_show"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/barrier4"
            app:layout_constraintStart_toEndOf="@+id/barrier5"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_pre_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="@string/tips_receive_pre_show" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/darker"
            android:textSize="@dimen/text_size_mid"
            app:layout_constraintEnd_toStartOf="@+id/barrier4"
            app:layout_constraintStart_toEndOf="@+id/iv_icon_left"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="file name" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_16"
            app:barrierDirection="start"
            app:constraint_referenced_ids="iv_icon_right" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_16"
            app:barrierDirection="end"
            app:constraint_referenced_ids="iv_icon_left" />

        <net.sdvn.nascommon.widget.AutoInvisibleTextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/barrier4"
            app:layout_constraintStart_toStartOf="@+id/tv_file_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_name"
            tools:text="user_name" />

        <net.sdvn.nascommon.widget.AutoInvisibleTextView
            android:id="@+id/tv_share_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/tv_share_dc"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/tv_file_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            tools:text="fileSize" />


        <net.sdvn.nascommon.widget.AutoInvisibleTextView
            android:id="@+id/tv_share_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end|center_vertical"
            android:textColor="@color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_share_size"
            app:layout_constraintEnd_toStartOf="@+id/barrier4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_share_dc"
            tools:text="fileSpeed" />

        <net.sdvn.nascommon.widget.AutoInvisibleTextView
            android:id="@+id/tv_share_dc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_share_size"
            app:layout_constraintEnd_toStartOf="@+id/tv_share_speed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_share_size"
            tools:text="tv_share_download_count"
            tools:visibility="visible" />

        <net.sdvn.nascommon.widget.AutoInvisibleTextView
            android:id="@+id/tv_share_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:textColor="@color/darker_gray"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/barrier4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/tv_file_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_share_size"
            tools:text="tv_share_date" />

        <net.sdvn.nascommon.widget.CircleStateProgressBar
            android:id="@+id/progress"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:MaxProgress="100"
            app:borderWidth="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/barrier5"
            app:layout_constraintStart_toEndOf="@+id/barrier4"
            app:layout_constraintTop_toTopOf="parent"
            app:stateShow="true" />

        <net.sdvn.nascommon.widget.SquareImageView
            android:id="@+id/iv_icon_left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/common_8"
            android:layout_marginEnd="@dimen/common_8"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/icon_share_receive"
            tools:visibility="visible" />

        <net.sdvn.nascommon.widget.SquareImageView
            android:id="@+id/iv_icon_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/common_8"
            android:layout_marginEnd="@dimen/common_8"
            android:scaleType="centerInside"
            android:src="@drawable/icon_share_initiate"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.chad.library.adapter.base.SwipeItemLayout>
