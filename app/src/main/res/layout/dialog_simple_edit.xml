<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_white"
        app:cardCornerRadius="@dimen/common_6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_start"
                android:layout_marginEnd="@dimen/view_end"
                android:gravity="center"
                android:paddingTop="25dip"
                android:paddingBottom="19dip"
                android:textColor="@color/text_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="xxxx" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_stroke_full_radius_gray"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:minHeight="@dimen/common_Btn_42"
                android:paddingStart="@dimen/view_start"
                android:paddingEnd="@dimen/common_icon48"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="@+id/tvTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                tools:hint="@string/hint_enter_pwd" />

            <ImageView
                android:id="@+id/iv_visible"
                android:layout_width="@dimen/common_icon48"
                android:layout_height="@dimen/common_icon48"
                android:background="@drawable/bg_ripple_trans_gray"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/et_content"
                app:layout_constraintEnd_toEndOf="@+id/et_content"
                app:layout_constraintTop_toTopOf="@+id/et_content"
                app:srcCompat="@drawable/selector_visible_white" />

<!--            <Button-->
