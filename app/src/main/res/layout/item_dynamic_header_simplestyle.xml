<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="50dip"
    app:layout_anchor="@id/appBarLayout"
    app:layout_anchorGravity="bottom|start"
    tools:showIn="@layout/activity_dynamic_simplestyle">


    <!--封面图片-->
    <ImageView
        android:id="@+id/ivBackgroud"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:scaleType="centerCrop"
        android:src="#454545"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vBackgroudBottom"
        android:layout_width="0dip"
        android:layout_height="1dip"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--标题辅助控件 -->
    <TextView
        android:id="@+id/tvTitleHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_10"
        android:text="sdfsdf"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ivPortrait"
        app:layout_constraintStart_toEndOf="@+id/ivPortrait"
        app:layout_constraintTop_toTopOf="@+id/ivPortrait" />

    <View
        android:id="@+id/vTitleBottomHelper"
        android:layout_width="0dip"
        android:layout_height="1dip"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleHelper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--标题辅助控件 end-->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dip"
        android:layout_marginEnd="@dimen/common_12"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_14"
        android:textStyle="bold"
        android:shadowDx="0"
        android:shadowColor="@color/text_dark"
        android:includeFontPadding="false"
        android:shadowDy="0"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="@+id/ivPortrait"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPortrait"
        app:layout_constraintTop_toTopOf="@+id/ivPortrait"
        tools:text="0840" />
    <!--layout_marginTop="@dimen/common_12"  表示底部留12 common_icon48的1/4  -->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPortrait"
        android:layout_width="63dip"
        android:layout_height="63dip"
        android:layout_marginStart="11dip"
        android:layout_marginBottom="31dip"
        android:background="@drawable/bg_circle_breif_icon"
        android:src="@drawable/icon_defualt_circle"
        app:layout_constraintBottom_toBottomOf="@+id/vBackgroudBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vBackgroudBottom"
        app:shapeAppearanceOverlay="@style/roundedCornerImageStyle_6dp" />

    <TextView
        android:id="@+id/tvBrief"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="11dip"
        android:text="@string/no_summary"
        android:textColor="#808080"
        android:textSize="12sp"
        android:layout_marginEnd="12dip"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivPortrait"
        app:layout_constraintTop_toBottomOf="@+id/ivPortrait" />

    <net.linkmate.app.view.TipsBar
        android:id="@+id/tipsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:visibility="gone"
        app:content_text="@string/load_failed"
        app:icon_visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBrief"
        app:link_text="@string/back_to_login"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnNewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dip"
        android:background="@drawable/selector_dynamic_msg"
        android:minHeight="0dip"
        android:paddingStart="28dip"
        android:paddingTop="14dip"
        android:paddingEnd="28dip"
        android:paddingBottom="14dip"
        android:text="1条新消息"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBrief"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>