<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itb_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_bar_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_ItemHeight48"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itb_iv_left"
                android:layout_width="@dimen/common_icon48"
                android:layout_height="@dimen/common_icon48"
                android:background="@drawable/bg_ripple_trans_gray"
                android:padding="@dimen/common_12"
                android:scaleType="centerInside"
                android:visibility="gone"
                tools:src="@drawable/icon_return"
                tools:visibility="visible" />

            <net.linkmate.app.view.MarqueeTextView
                android:id="@+id/itb_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_8"
                android:layout_weight="1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_17" />

            <ImageView
                android:id="@+id/itb_iv_right"
                android:layout_width="@dimen/common_icon48"
                android:layout_height="@dimen/common_icon48"
                android:background="@drawable/bg_ripple_trans_gray"
                android:padding="@dimen/common_12"
                android:scaleType="centerInside" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line"
            android:background="@color/bg_trans_white_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_12"
                android:layout_marginTop="@dimen/common_10"
                android:layout_marginBottom="@dimen/common_10"
                android:text="@string/upstream_traffic"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/adfd_ll_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adfd_tv_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_marginBottom="@dimen/common_10"
                    android:text="@string/all_dev"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/txt_12" />

                <ImageView
                    android:layout_width="@dimen/common_12"
                    android:layout_height="@dimen/common_12"
                    android:layout_marginStart="@dimen/common_2"
                    android:src="@drawable/icon_dropdown" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <net.linkmate.app.view.TipsBar
        android:id="@+id/tipsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        app:icon_visibility="visible"
        app:content_text="@string/load_failed"
        app:link_text="@string/back_to_login"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/adfd_srl_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/adfd_rv_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>