<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_click_white_ripple"
    xmlns:tools="http://schemas.android.com/tools">

        <!--设备详情-->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/txt_12"
            android:paddingStart="@dimen/common_10"
            android:paddingEnd="@dimen/common_4"
            android:layout_marginTop="@dimen/common_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"
            android:text="DEV 0001"
            />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="08月08日"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/txt_10"
            android:paddingStart="@dimen/common_10"
            android:paddingEnd="@dimen/common_4"
            android:layout_marginTop="@dimen/common_4"
            android:paddingBottom="@dimen/common_10"
            app:layout_constraintStart_toStartOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            />
        <!--上行流量-->
        <TextView
            android:id="@+id/tvUpstreamTrafficValue"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/txt_12"
            android:paddingStart="@dimen/common_4"
            android:paddingEnd="@dimen/common_4"
            android:paddingBottom="@dimen/common_10"
            android:paddingTop="@dimen/common_10"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="50G" />
        <!--相关积分-->
        <TextView
            android:id="@+id/tvRelatePointsValue"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/txt_12"
            android:paddingStart="@dimen/common_4"
            android:paddingEnd="@dimen/common_4"
            android:gravity="center"
            android:paddingBottom="@dimen/common_10"
            android:paddingTop="@dimen/common_10"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/tvUpstreamTrafficValue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="50" />
        <!--收益-->
        <TextView
            android:id="@+id/tvGetPointsValue"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/txt_12"
            android:paddingStart="@dimen/common_4"
            android:paddingEnd="@dimen/common_10"
            android:gravity="center"
            android:paddingBottom="@dimen/common_10"
            android:paddingTop="@dimen/common_10"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/tvRelatePointsValue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="50" />
        <View style="@style/common_line_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>